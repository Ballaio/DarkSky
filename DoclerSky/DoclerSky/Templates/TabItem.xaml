                               Text="{DynamicResource ApparentTemp}" />
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource WindSpeed}" />
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource Humidity}" />
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource UVIndex}" />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="{Binding Forecast[3].Temperature}" />
                    <TextBlock Text="{Binding Forecast[3].ApparentTemperature}" />
                    <TextBlock Text="{Binding Forecast[3].WindSpeed}" />
                    <TextBlock Text="{Binding Forecast[3].Humidity}" />
                    <TextBlock Text="{Binding Forecast[3].UVIndex}" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Forecast[4].DateTime.DayOfWeek}" />
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource Temp}" />
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource ApparentTemp}" />
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource WindSpeed}" />
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource Humidity}" />
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource UVIndex}" />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="{Binding Forecast[4].Temperature}" />
                    <TextBlock Text="{Binding Forecast[4].ApparentTemperature}" />
                    <TextBlock Text="{Binding Forecast[4].WindSpeed}" />
                    <TextBlock Text="{Binding Forecast[4].Humidity}" />
                    <TextBlock Text="{Binding Forecast[4].UVIndex}" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Forecast[5].DateTime.DayOfWeek}" />
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource Temp}" />
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource ApparentTemp}" />
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource WindSpeed}" />
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource Humidity}" />
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource UVIndex}" />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="{Binding Forecast[5].Temperature}" />
                    <TextBlock Text="{Binding Forecast[5].ApparentTemperature}" />
                    <TextBlock Text="{Binding Forecast[5].WindSpeed}" />
                    <TextBlock Text="{Binding Forecast[5].Humidity}" />
                    <TextBlock Text="{Binding Forecast[5].UVIndex}" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Forecast[6].DateTime.DayOfWeek}" />
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource Temp}" />
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource ApparentTemp}" />
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource WindSpeed}" />
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource Humidity}" />
                    <TextBlock TextAlignment="Left"
                               Text="{DynamicResource UVIndex}" />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="{Binding Forecast[6].Temperature}" />
                    <TextBlock Text="{Binding Forecast[6].ApparentTemperature}" />
                    <TextBlock Text="{Binding Forecast[6].WindSpeed}" />
                    <TextBlock Text="{Binding Forecast[6].Humidity}" />
                    <TextBlock Text="{Binding Forecast[6].UVIndex}" />
                </StackPanel>
            </Grid>
        </Grid>

    </DataTemplate>

    <DataTemplate x:Key="test">
        <Grid>
            <TextBlock Text="asd" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>
